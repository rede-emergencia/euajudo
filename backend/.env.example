# VouAjudar Backend Environment Variables
# Copie este arquivo para .env e ajuste os valores

# Security
SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Database
DATABASE_URL=sqlite:///./euajudo.db
# Para PostgreSQL em produção:
# DATABASE_URL=postgresql://user:password@localhost/euajudo

# CORS (em produção, especifique seu domínio)
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Environment
ENVIRONMENT=development
DEBUG=true

# Optional: Redis para eventos futuros
# REDIS_URL=redis://localhost:6379
